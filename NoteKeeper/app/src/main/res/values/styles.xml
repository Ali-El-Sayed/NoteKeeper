<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="courseTitle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/aqua</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fab" parent="@style/Widget.Design.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_add_circle</item>
        <item name="android:tint">@android:color/white</item>
    </style>
</resources>
