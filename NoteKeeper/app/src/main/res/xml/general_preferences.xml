<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:key="user_display_name"
        app:title="@string/user_display_name"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:key="user_email_address"
        app:title="@string/user_email_address"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        android:key="favourite_social_network"
        app:defaultValue="https://www.google.com/"
        app:entries="@array/favourite_social_network_entries"
        app:entryValues="@array/favourite_social_network_values"
        app:title="@string/favourite_social_network"
        app:useSimpleSummaryProvider="true" />


</PreferenceScreen>